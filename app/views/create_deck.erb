<div class='create_deck'>
  <h3>Create your deck</h3>
  <form action="/<%= session[:id] %>/create_deck" method='post'>
    <input type='text' name='deck_name' placeholder='Deck Name' style='width: 300px' required>
    <input type='text' name='topic' placeholder='Deck Topic' style='width: 300px' required>
    <input type='submit' value='Create Deck'>
  </form>
</div>

<div class='create_card'>
  <h3>Create your cards</h3>
  <% if @new_deck
      @deck_id = @new_deck.id
    else 
      @deck_id = nil 
    end%>
  <form action="/<%= session[:id] %>/create_card" method='post'>
    <input type='text' name='question' placeholder='Question' style='width: 300px' required>
    <input type='text' name='answer' placeholder='Answer' style='width: 300px' required>
    <input type='hidden' name='deck_id' value="<%=@deck_id%>" >    
    <input type='submit' value='Create Card'>
  </form>
</div>
